---
import "@fontsource/turret-road"
import { Icon } from "astro-icon"
import DarkMode from "@/components/DarkMode.astro"
import { SITE_TITLE } from "@/consts"

const navLinkList = [
  {
    path: "/",
    name: "HOME",
  },
  {
    path: "/archive/1",
    name: "ARCHIVE",
  },
  {
    path: "/about",
    name: "ABOUT",
  },
]
---

<header class="p-2 pb-0 bg-white border-b-4 border-indigo-600 header">
  <div class="mx-auto text-center text-3xl logo">{SITE_TITLE}</div>
  <nav>
    <ul class="flex flex-row list-none justify-center text-xl">
      {
        navLinkList.map((navItem) => (
          <li class="w-44 text-center">
            <a href={navItem.path}>{navItem.name}</a>
          </li>
        ))
      }
      <li class="w-10 flex justify-center">
        <a href="/search" class="p-1">
          <Icon name="mdi:magnify" style="width: 26px; height: 26px" />
        </a>
      </li>
      <li transition:persist>
        <DarkMode />
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    grid-area: header;
  }
</style>
