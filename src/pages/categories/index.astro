---
import Layout from "@/layouts/Layout.astro"
import { getAllCategories } from "@/lib/client"

const categories = await getAllCategories()

const pageName = "Categories"
---

<Layout pageName={pageName}>
  <main>
    <h2 class="text-2xl font-bold mb-4">{pageName}</h2>
    <ul class="flex flex-wrap gap-3">
      {
        categories.map((cat) => (
          <li>
            <a
              href={`/categories/${cat.id}/1`}
              class="text-xl text-indigo-500 border border-indigo-500 rounded-md hover:bg-indigo-50 px-2 py-1"
            >
              {cat.name}
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
